#!/bin/bash
AN="-c:a libopus -b:a 64K"
FROM=""
TO=""
while getopts ":i:aso:f:t:" opt; do
    case $opt in
        a)
            AN="-an"
            ;;
        s)
            SN="-sn"
            ;;
        i)
            INPUT=$OPTARG
            if [ ! -f $INPUT ]; then
                echo "$INPUT is not a valid file descriptor!" >&2;
                exit 1
            fi
            ;;
        o)
            OUTPUT=$OPTARG
            ;;
        f)
            FROM="-ss $OPTARG"
            ;;
        t)
            TO="-t $OPTARG"
            ;;
        \?)
            echo "Invalid" >&2
            exit 1
            ;;
        :)
            echo "-$OPTARG requires an argument!" >&2
            exit 1
            ;;
    esac
done

echo "y" | /cygdrive/e/Wolfie/tools/ffmpeg/bin/ffmpeg.exe -i "$INPUT"\
    -c:v libvpx-vp9\
    -b:v 1000K\
    $FROM\
    $TO\
    -pass 1\
    -threads 8\
    -speed 4\
    -tile-columns 6\
    -frame-parallel 1\
    -an\
    -sn\
    -f\
    webm\
    NUL; 
/cygdrive/e/Wolfie/tools/ffmpeg/bin/ffmpeg.exe -i "$INPUT"\
    -c:v libvpx-vp9\
    -b:v 1000K\
    $FROM\
    $TO\
    -pass 2\
    -threads 8\
    -speed 1\
    -tile-columns 6\
    -frame-parallel 1\
    -auto-alt-ref 1\
    -lag-in-frames 25\
    $AN\
    $SN\
    -f\
    webm\
    "$OUTPUT";
rm NUL
